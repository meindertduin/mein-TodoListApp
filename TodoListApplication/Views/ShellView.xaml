<Window x:Class="TodoListApplication.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoListApplication.Views"
            
        
        
        mc:Ignorable="d"
        Title="ShellView" MinHeight="450" MinWidth="800" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        
        <!-- Row 1 -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" MinWidth="200">
            <Button x:Name="LoadAddTodoPage" Content="Add todo" Height="30" Width="100" Padding="5"/>
            <Button x:Name="LoadViewTodoPage" Content="Show todo's" Height="30" Width="100"  Padding="5"/>
        </StackPanel>

        <!-- Row 2 -->
        <ContentControl x:Name="ActiveItem" Grid.Column="0" Grid.Row="2"
                        Grid.RowSpan="3" />
        

    </Grid>
</Window>
